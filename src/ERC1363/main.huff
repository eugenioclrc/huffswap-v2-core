    __FUNC_SIG("onApprovalReceived(address,uint256,bytes)")    // [spender, 0x20, z0, add(calldatasize(), 0x40), z0, z0, SIG_onApprovalReceived]
    0xe0                        // [spender, 0x20, z0, add(calldatasize(), 0x40), z0, z0, SIG_onApprovalReceived, 0xe0]
