    _TRANSFER_FROM(<z0>, 0x44)  // [0x20, to, from]
    _TRANSFER_FROM_HOOK(<z0>)   // [0x20]
    0x1                         // [0x20, 0x1]
    <z0>                        // [0x20, 0x1, z0]
