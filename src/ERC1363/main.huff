    // returns:                    []
}
#define macro _TRANSFER_FROM_HOOK(z0) = takes(2) returns(0) {
    // takes:                      [to, from]
    0x20                        // [to, from, 0x20]
    <z0>                        // [to, from, 0x20, z0]
    0x60                        // [to, from, 0x20, z0, 0x60]
    calldatasize                // [to, from, 0x20, z0, 0x60, calldatasize()]
    add                         // [to, from, 0x20, z0, size]
    <z0>                        // [to, from, 0x20, z0, size, z0]
    <z0>                        // [to, from, 0x20, z0, size, z0, z0]
    __FUNC_SIG("onTransferReceived(address,address,uint256,bytes)")    // [to, from, 0x20, z0, size, z0, z0, SIG_onTransferReceived]
    0xe0                        // [to, from, 0x20, z0, size, z0, z0, SIG_onTransferReceived, 0xe0]
    shl                         // [to, from, 0x20, z0, size, z0, z0, shiftedFunctionSig]
    swap7                       // [shiftedFunctionSig, from, 0x20, z0, size, z0, z0, to]
    gas                         // [shiftedFunctionSig, from, 0x20, z0, size, z0, z0, to, gas()]
    0x80                        // [shiftedFunctionSig, from, 0x20, z0, size, z0, z0, to, gas(), 0x80]
    0x64                        // [shiftedFunctionSig, from, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64]
    <z0>                        // [shiftedFunctionSig, from, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, z0]
    swap10                      // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from]
    0x24                        // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24]
    caller                      // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller()]
    0x4                         // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4]
    dup15                       // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4, shiftedFunctionSig]
    <z0>                        // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4, shiftedFunctionSig, z0]
    0x64                        // [..., z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4, shiftedFunctionSig, z0, 0x64]
    calldatasize                // [..., 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4, shiftedFunctionSig, z0, 0x64, calldatasize()]
    sub                         // [..., z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4, shiftedFunctionSig, z0, sub(calldatasize(), 0x64)]
    0x64                        // [..., 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4, shiftedFunctionSig, z0, sub(calldatasize(), 0x64), 0x64]
    0x64                        // [..., z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4, shiftedFunctionSig, z0, sub(calldatasize(), 0x64), 0x64, 0x64]
    calldatacopy                // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4, shiftedFunctionSig, z0]
    mstore                      // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24, caller(), 0x4]
    mstore                      // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64, from, 0x24]
    mstore                      // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas(), 0x80, 0x64]
    mstore                      // [shiftedFunctionSig, z0, 0x20, z0, size, z0, z0, to, gas()]
    call                        // [shiftedFunctionSig, z0, callOk]
    _REQUIRE(<z0>, 0x85b16394)  // [shiftedFunctionSig, z0]
    mload                       // [shiftedFunctionSig, ret]
    eq                          // [eq(ret, shiftedFunctionSig)]
    _REQUIRE(<z0>, 0x85b16394)  // []
    // returns:                    []
}
